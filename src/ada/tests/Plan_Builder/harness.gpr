with "aunit";
with "../../afrl_ada_dev";

project Harness is

   for Languages use ("Ada");
   for Main use ("test_plan_builder.adb");
   for Source_Dirs use ("fixture", "tests");
   for Exec_Dir use ".";
   for Object_Dir use "obj";

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E", "-static");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use
        ("-g", "-gnatQ", "-O1", "-gnatf", "-gnato",
         "-gnatwa.Xe", "-gnaty", "-gnat2022");
   end Compiler;

end Harness;

